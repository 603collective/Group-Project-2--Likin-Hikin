<!-- Loop over each object in the trails array -->
{{#each trails }}
<div class="row mb-4 trail">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/trail/{{trail_id}}">{{trail_name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="mountain">⛰️</span>
      <!-- Pass needed_funding value to the helper function -->
      
      out of 5 difficulty
    </p>
     <p>Created by {{user.name}} on {{format_date createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  </div>
</div>
{{/each}}
